<image src="/images/bg.png"/>
<view class="container">
    <view class="id">
        <image src="/icons/password2.png" mode="aspectFit"></image>
        <input bindinput="oldpassword" type="password" placeholder="请输入原密码" maxlength="11" placeholder-style="font-size: 12px;color: #A6A5A5;text-align: left"/>
    </view>   
    <view class="psw_input">
        <image src="/icons/password1.png" mode="aspectFit"></image>
        <input bindinput="getpassword" type="password" placeholder="请输入新密码" placeholder-style="font-size: 12px;color: #A6A5A5;text-align: left"/>
    </view>
    <view class="psw_sure">
        <image src="/icons/password2.png" mode="aspectFit"></image>
        <input bindinput="getrepassword" type="password" placeholder="确认你的密码" placeholder-style="font-size: 12px;color: #A6A5A5;text-align: left"/>
    </view>
    <button bindtap="finish" class="finish">修改密码</button>
    <view class="attention">
      <view class="a1">提示:密码为长度在6到20之间</view>
    <view class="a2">数字、字母、特殊字符两种以上的任意搭配</view>
    </view>
</view>