<image src="/images/bg.png"/>
<view class="container">
    <view class="id">
        <image src="/icons/telphone.png" mode="aspectFit"></image>
        <input bindinput="gettelephone" type="number" placeholder="请输入手机号" maxlength="11" placeholder-style="font-size: 12px;color: #A6A5A5;text-align: left"/>
    </view>
    <view class="psw">
        <image src="/icons/password2.png" mode="aspectFit"></image>
        <input bindinput="getpassword" type="password" placeholder="确认你的密码" placeholder-style="font-size: 12px;color: #A6A5A5;text-align: left"/>
    </view>
    <button class="login" bindtap="loginapp">登录</button>
    <view class="op">
      <view bindtap="register" class="register">立即注册</view>
      <view class="forget">忘记密码</view>
    </view>
</view>